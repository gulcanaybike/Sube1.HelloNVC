@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Index";
}

<h1>Ogrenci Listesi</h1>
<a asp-action="AddStudent" asp-controller="Student" class="btn btn-primary">Ömğrenci Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>Numara</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Numara</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td> <a class="btn btn-sm btn-success" href="/Student/EditStudent/@item.Ogrenciid">Düzenle</a> <a class="btn btn-danger btn-sm" href="/Student/DeleteStudent/@item.Ogrenciid" onclick=" return confirm('Emin misiniz?')">Sil</a></td>
            </tr>
        }
    </tbody>
</table>