@model IEnumerable<Ders>
@{
    ViewData["Title"] = "Index";
}

<h1>Dersler Listesi</h1>
<a asp-action="AddDers" asp-controller="Ders" class="btn btn-outline-success">Ders Ekle</a>
<table class="table table-striped table-bordered table-hover table-secondary">
    <thead class="table-dark">
        <tr>
            <th>Ders Adı</th>
            <th>Ders Kodu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Dersad</td>
                <td>@item.DersKodu</td>
                <td><a class="btn btn-sm btn-success" href="/Ders/EditDers/@item.Dersid">Düzenle</a> <a class="btn btn-danger btn-sm" href="/Ders/DeleteDers/@item.Dersid" onclick=" return confirm('Emin misiniz?')">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
